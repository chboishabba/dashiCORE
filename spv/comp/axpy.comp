#version 450
layout(local_size_x = 256) in;

/*
AXPY: y[i] = a * x[i] + y[i]
*/

layout(std430, set=0, binding=0) readonly buffer X { float x[]; };
layout(std430, set=0, binding=1) buffer Y { float y[]; };

layout(push_constant) uniform PC {
  uint n;
  float a;
} pc;

void main() {
  uint i = gl_GlobalInvocationID.x;
  if (i >= pc.n) return;
  y[i] = pc.a * x[i] + y[i];
}
