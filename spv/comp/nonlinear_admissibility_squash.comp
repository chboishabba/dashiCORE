#version 450
layout(local_size_x = 256) in;

/*
ADMISSIBILITY_SQUASH:
out[i] = tanh(alpha * x[i])
Bounded to (-1,1). Deterministic.
*/

layout(std430, set=0, binding=0) readonly buffer X { float x[]; };
layout(std430, set=0, binding=1) writeonly buffer O { float outv[]; };

layout(push_constant) uniform PC {
  uint n;
  float alpha;
} pc;

void main() {
  uint i = gl_GlobalInvocationID.x;
  if (i >= pc.n) return;

  outv[i] = tanh(pc.alpha * x[i]);
}
